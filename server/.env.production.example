# FILE: server/.env.production.example
# Production Environment Configuration

# Server
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com

# Security (REQUIRED - Generate strong secrets!)
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_change_this_in_production
DB_PASSWORD=your_strong_database_password_change_this

# Database (PostgreSQL for production)
DATABASE_URL="postgresql://postgres:your_strong_database_password_change_this@db:5432/meeting_copilot"

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# Transcription Configuration
TRANSCRIBE_PROVIDER=whisper

# Optional: Rate limiting, logging, etc.
# LOG_LEVEL=info

